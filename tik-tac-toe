<body>
    <div class="container">
        <h1>Tic Tac Toe</h1>
        
        <div id="print">Player X Turn</div>
        
        <div class="board">
            <input type="text" class="cell" id="b1" onclick="makeMove(0)" readonly>
            <input type="text" class="cell" id="b2" onclick="makeMove(1)" readonly>
            <input type="text" class="cell" id="b3" onclick="makeMove(2)" readonly>
            <input type="text" class="cell" id="b4" onclick="makeMove(3)" readonly>
            <input type="text" class="cell" id="b5" onclick="makeMove(4)" readonly>
            <input type="text" class="cell" id="b6" onclick="makeMove(5)" readonly>
            <input type="text" class="cell" id="b7" onclick="makeMove(6)" readonly>
            <input type="text" class="cell" id="b8" onclick="makeMove(7)" readonly>
            <input type="text" class="cell" id="b9" onclick="makeMove(8)" readonly>
        </div>
        
        <div class="buttons">
            <button onclick="resetGame()">Reset Game</button>
            <button onclick="downloadCSV()">Download Game Log (CSV)</button>
        </div>
        
        <div class="stats">
            <h3>Game Statistics</h3>
            <div id="stats">Total Games: 0</div>
        </div>
    </div>

    <script>
        let currentPlayer = 'X';
        let board = ['', '', '', '', '', '', '', '', ''];
        let gameActive = true;
        let moveCount = 0;
        let gameHistory = [];

        const cells = ['b1', 'b2', 'b3', 'b4', 'b5', 'b6', 'b7', 'b8', 'b9'];
        
        const winConditions = [
            [0, 1, 2], [3, 4, 5], [6, 7, 8], // Rows
            [0, 3, 6], [1, 4, 7], [2, 5, 8], // Columns
            [0, 4, 8], [2, 4, 6]              // Diagonals
        ];

        function makeMove(index) {
            if (!gameActive || board[index] !== '') return;
            
            board[index] = currentPlayer;
            document.getElementById(cells[index]).value = currentPlayer;
            document.getElementById(cells[index]).disabled = true;
            moveCount++;
            
            checkResult();
        }

        function checkResult() {
            let roundWon = false;
            
            for (let condition of winConditions) {
                const [a, b, c] = condition;
                if (board[a] && board[a] === board[b] && board[a] === board[c]) {
                    roundWon = true;
                    break;
                }
            }

            if (roundWon) {
                document.getElementById('print').innerHTML = `Player ${currentPlayer} Won!`;
                gameActive = false;
                disableAllCells();
                logGame(`Player ${currentPlayer} Won`);
                setTimeout(() => alert(`Player ${currentPlayer} Won!`), 100);
                return;
            }

            if (moveCount === 9) {
                document.getElementById('print').innerHTML = 'Match Tie!';
                gameActive = false;
                logGame('Tie');
                setTimeout(() => alert('Match Tie!'), 100);
                return;
            }

            currentPlayer = currentPlayer === 'X' ? 'O' : 'X';
            document.getElementById('print').innerHTML = `Player ${currentPlayer} Turn`;
        }

        function disableAllCells() {
            cells.forEach(cell => {
                document.getElementById(cell).disabled = true;
            });
        }

        function resetGame() {
            currentPlayer = 'X';
            board = ['', '', '', '', '', '', '', '', ''];
            gameActive = true;
            moveCount = 0;
            
            cells.forEach(cell => {
                document.getElementById(cell).value = '';
                document.getElementById(cell).disabled = false;
            });
            
            document.getElementById('print').innerHTML = 'Player X Turn';
        }

        function logGame(result) {
            const now = new Date();
            const dateStr = now.toLocaleDateString('en-US');
            const timeStr = now.toLocaleTimeString('en-US', { hour12: false });
            
            // Determine Player X result
            let playerXResult;
            if (result === 'Player X Won') {
                playerXResult = 'Player X Won';
            } else if (result === 'Player O Won') {
                playerXResult = 'Player X LOSS';
            } else {
                playerXResult = 'Tie';
            }
            
            gameHistory.push({
                date: dateStr,
                time: timeStr,
                moves: moveCount,
                result: playerXResult
            });
            
            updateStats();
        }

        function updateStats() {
            const xWins = gameHistory.filter(g => g.result === 'Player X Won').length;
            const oWins = gameHistory.filter(g => g.result === 'Player O Won').length;
            const ties = gameHistory.filter(g => g.result === 'Tie').length;
            
            document.getElementById('stats').innerHTML = `
                Total Games: ${gameHistory.length}<br>
                X Wins: ${xWins} | O Wins: ${oWins} | Ties: ${ties}
            `;
        }

        function downloadCSV() {
            if (gameHistory.length === 0) {
                alert('No games played yet!');
                return;
            }
            
            let csv = 'Date\tTime\tNumber of Moves\tResult\n';
            
            gameHistory.forEach(game => {
                csv += `${game.date}\t${game.time}\t${game.moves}\t${game.result}\n`;
            });
            
            const blob = new Blob([csv], { type: 'text/csv' });
            const url = window.URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'tic.csv';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            window.URL.revokeObjectURL(url);
        }
    </script>
</body>
</html>
